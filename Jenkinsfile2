pipeline{
    agent any
    tools { 
        maven 'maven-3.8.6' 
    }

    environment {
        dockerImage = 'gkiran04/webapp'
        dockerRegistry = 'https://registry.hub.docker.com'
        dockerCredentialsId = 'Docker_Hub'
    }

    stages{

        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/gkiran04/DevSecOps-project.git'
